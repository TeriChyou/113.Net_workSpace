@model mvcPlayground.Models.Character

@{
    ViewData["Title"] = "Delete Character";
}

<h2>Delete Character</h2>

<h3>Are you sure you want to delete this character?</h3> @* 刪除確認訊息 *@

<div>
    <h4>Character</h4>
    <hr />
    <dl class="row"> @* 使用定義列表 (dl) 來顯示角色資訊 *@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name) @* 顯示屬性名稱 *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name) @* 顯示屬性值 *@
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Job)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Job)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Level)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Level)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" /> @* 隱藏欄位用於傳遞角色 Id *@
        <input type="submit" value="Delete" class="btn btn-danger" /> | @* 刪除按鈕 *@
        <a asp-action="CharacterInfo">Back to List</a> @* 返回列表頁面的連結 *@
    </form>
</div>